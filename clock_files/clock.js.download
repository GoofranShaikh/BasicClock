
setInterval(()=>{
var d = new Date();
//console.log(d.getHours())
hrs=d.getHours();
mins=d.getMinutes();
secs=d.getSeconds();
rhrs=30*hrs+mins/2;
rmins=6*mins;
rsecs=6*secs;
document.getElementById("hr").style.transform="rotate("+rhrs+"deg)";
document.getElementById("min").style.transform="rotate("+rmins+"deg)";
document.getElementById("sec").style.transform="rotate("+rsecs+"deg)";



},1000);